/* Footer.css - Estilo profissional e responsivo para o rodap√© */

@import url('https://fonts.googleapis.com/css2?family=Fira+Code:wght@500&display=swap');

.App-footer {
  width: 100%;
  background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 50%, var(--accent-primary) 100%);
  color: var(--text-primary);
  text-align: center;
  padding: 40px 20px 20px 20px;
  font-size: 1.2rem;
  letter-spacing: 1.5px;
  font-family: 'Fira Code', 'Courier New', monospace;
  box-shadow: var(--shadow-medium);
  position: relative;
  bottom: 0;
  transition: all 0.3s ease;
  border-top: 3px solid var(--accent-primary);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px;
  box-sizing: border-box;
  z-index: 1;
  margin-top: 50px;
}

.footer-icons {
  display: flex;
  gap: 30px;
  justify-content: center;
  margin-bottom: 15px;
  flex-wrap: wrap;
}

.footer-icons a {
  color: var(--text-primary);
  font-size: 2.5rem;
  transition: all 0.3s ease;
  padding: 10px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60px;
  height: 60px;
  background: var(--bg-tertiary);
  border: 1px solid var(--border-secondary);
}

.footer-icons a:hover {
  color: var(--text-inverse);
  background: var(--accent-primary);
  transform: scale(1.2) translateY(-3px);
  background: rgba(255,255,255,0.1);
  box-shadow: 0 4px 12px rgba(33,161,243,0.3);
}

.footer-code {
  font-size: 1.1rem;
  color: var(--text-secondary);
  font-family: 'Fira Code', 'Courier New', monospace;
  background: var(--bg-tertiary);
  padding: 8px 16px;
  border-radius: 8px;
  display: inline-block;
  border: 1px solid var(--border-primary);
  margin-bottom: 10px;
  transition: all 0.3s ease;
}

.footer-code:hover {
  background: rgba(33,161,243,0.2);
  transform: translateY(-2px);
}

.App-footer p {
  margin: 0;
  font-size: 0.9rem;
  color: #ccc;
  opacity: 0.8;
}

/* Responsividade para tablets */
@media (max-width: 1024px) {
  .App-footer {
    padding: 35px 15px 18px 15px;
    font-size: 1.1rem;
    gap: 18px;
  }
  
  .footer-icons {
    gap: 25px;
    margin-bottom: 12px;
  }
  
  .footer-icons a {
    font-size: 2.2rem;
    width: 55px;
    height: 55px;
  }
  
  .footer-code {
    font-size: 1rem;
    padding: 6px 14px;
  }
}

/* Responsividade para tablets pequenos */
@media (max-width: 900px) {
  .App-footer {
    padding: 30px 12px 15px 12px;
    font-size: 1rem;
    gap: 15px;
  }
  
  .footer-icons {
    gap: 20px;
    margin-bottom: 10px;
  }
  
  .footer-icons a {
    font-size: 2rem;
    width: 50px;
    height: 50px;
  }
  
  .footer-code {
    font-size: 0.95rem;
    padding: 5px 12px;
  }
}

/* Responsividade para mobile */
@media (max-width: 768px) {
  .App-footer {
    padding: 25px 10px 12px 10px;
    font-size: 0.95rem;
    gap: 12px;
    letter-spacing: 1px;
  }
  
  .footer-icons {
    gap: 18px;
    margin-bottom: 8px;
  }
  
  .footer-icons a {
    font-size: 1.8rem;
    width: 45px;
    height: 45px;
    padding: 8px;
  }
  
  .footer-code {
    font-size: 0.9rem;
    padding: 4px 10px;
  }
  
  .App-footer p {
    font-size: 0.8rem;
  }
}

/* Responsividade para mobile pequeno */
@media (max-width: 480px) {
  .App-footer {
    padding: 20px 8px 10px 8px;
    font-size: 0.9rem;
    gap: 10px;
  }
  
  .footer-icons {
    gap: 15px;
    margin-bottom: 6px;
  }
  
  .footer-icons a {
    font-size: 1.6rem;
    width: 40px;
    height: 40px;
    padding: 6px;
  }
  
  .footer-code {
    font-size: 0.85rem;
    padding: 3px 8px;
  }
  
  .App-footer p {
    font-size: 0.75rem;
  }
}

/* Responsividade para mobile muito pequeno */
@media (max-width: 360px) {
  .App-footer {
    padding: 15px 6px 8px 6px;
    font-size: 0.85rem;
    gap: 8px;
  }
  
  .footer-icons {
    gap: 12px;
    margin-bottom: 5px;
  }
  
  .footer-icons a {
    font-size: 1.4rem;
    width: 35px;
    height: 35px;
    padding: 5px;
  }
  
  .footer-code {
    font-size: 0.8rem;
    padding: 2px 6px;
  }
  
  .App-footer p {
    font-size: 0.7rem;
  }
}
